<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chabok_diag_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <com.adp.chabok.ui.TextView
        android:id="@+id/error_fragment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:lineSpacingExtra="5dp"
        android:textColor="@color/msg_color"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:gravity="center"
        android:background="@drawable/settings_bg"
        android:text="@string/msg_error_in_connection" />

    <com.adp.chabok.ui.Button
        android:id="@+id/ok_btn"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/error_ok_btn"
        android:text="@string/action_yeah"
        android:textColor="@color/my_white"
        android:textSize="16sp" />


</LinearLayout>